{% extends 'base.html.twig' %}



{% block content %}



 <div class="row">

               <div class="col-md-4"> 
                           <h1>Service</h1>
                    
                            

                                                  {% if notification %}
                                                  <div class="alert alert-info">{{ notification }}</div>
                                                  {% endif %}  

                                                  {% if notification2 %}
                                                  <div class="alert alert-info">{{ notification2 }}</div>
                                                  {% endif %}  

                                                       <form action="#" method="post" enctype="multipart/form-data" >
                                                       <div class="form-group">
                                                                      <label for="disabledTextInput">Nom du service</label>
                                                                      <input type="text" id="disabledTextInput"  {% if service2s is defined %} value="{{service2s.Nomservice}}" {% endif %}" name="nom" class="form-control" placeholder="Disabled input">
                                                       </div>

                                                            <div class="form-group">
                                                                      <label for="disabledTextInput">Description</label>
                                                                      <input type="textarea" id="disabledTextInput"  {% if service2s is defined %}  value="{{service2s.Description}}" {% endif %}
                                                                      name="description" class="form-control" placeholder="Disabled input">
                                                                 </div>

                                                                      <div class="form-group">
                                                                           <label for="disabledTextInput">Image</label>
                                                                      <input type="file" id="disabledTextInput"   name="image_service" class="form-control" placeholder="Disabled input">
                                                                      </div>

                                                                      <div class="form-group">
                                                                      
                                                                      <input type="submit" id="disabledTextInput"  name="envoyer" class="btn btn-primary">
                                                                      </div>
                                                            </form>
                            
               </div>


               <div class="col-md-8">            
                           <h1>Liste des services</h1>   
                                
                                  <div class="row product-container">
                                 {% if services!=null %}
                                             {% for service in services  %}
                                             <div class="col-md-3">                                       
                                             {{service.Nomservice}}                    
                                             </div>

                                             <div class="col-md-3">                                                                                              
                                             {{service.description}}                 
                                             </div>

                                             <div class="col-md-3">  
                                                  Supprimer                                                    
                                                  <a href="{{path('service_supprimer',{'id':service.id})}}">(X)</a>                 
                                             </div>

                                             <div class="col-md-3">                                                      
                                                  Mettre à jour
                                                  <a href="{{path('service_modifier',{'id':service.id})}}">(0)</a>                   
                                             </div> 
                                             {% endfor  %}   
                                     {% else %}
                              Vous n'avez crée aucun service
                              {% endif %}
                              
                                   </div>                   
               </div> 


     </div>






{% endblock %}
