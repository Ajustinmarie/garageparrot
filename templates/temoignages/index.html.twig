{% extends 'base.html.twig' %}

{% block title %}Hello TemoignagesController!{% endblock %}

{% block content %}


 <div class="row">

               <div class="col-md-6">      
                           <h4>Inserer un témoignages</h4>
                           {% if notification %}
                            <div class="alert alert-info">{{notification}}</div>
                            {% endif %}
                            
                             {{ form_start(form) }}
                          {{ form_row(form.nom) }}
                          {{ form_row(form.commentaire) }}
                         {{ form_row(form.note, {
    'help': 'Note maximale : 20',
    'attr': {
        'max': 20,
        'min': 00
    }
}) }}
                          {{ form_row(form.submit) }}
                          {{ form_end(form) }}
               </div>


               <div class="col-md-6">
                        
                           <h4>Liste des témoignages</h4> 

                              <div class="row product-container">

                                             

                                                            <div class="row product-container">
                                                                     
                                                                                  {% for temoignage in temoignages  %}
                                                                                  
                                                                                      <div class="col-md-3">                                       
                                                                                      {{temoignage.nom}}                    
                                                                                      </div>


                                                                                      <div class="col-md-3">                                       
                                                                                      {{temoignage.note}}/20                    
                                                                                      </div>

                                                                                      <div class="col-md-6">                                       
                                                                                      {{temoignage.commentaire}}                    
                                                                                      </div>


                                                                                  {% endfor  %}                                                                                     
                                                                    
                                                            </div>     
                                        
                              </div>      
               </div>


 </div>




{% endblock %}




                                            